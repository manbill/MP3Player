<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/fragment_file_btn_bg_focused" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/fragment_file_btn_bg_focused" />
            <stroke android:width="@dimen/fragment_file_btn_bg_stroke_width" android:color="@android:color/holo_orange_dark" />
        </shape>
    </item>

    <item android:drawable="@android:color/holo_blue_bright" />

</selector>